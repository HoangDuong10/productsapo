<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/rlProductItem"
    android:layout_height="wrap_content"
    android:padding="@dimen/define_dimen_18"
    >
    <ImageView
        android:layout_centerVertical="true"
        android:id="@+id/ivProduct"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_empty"/>
    <LinearLayout
        android:layout_marginLeft="@dimen/define_dimen_10"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:layout_toEndOf="@id/ivProduct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_normal"
            android:id="@+id/tvProductName"
            android:layout_toRightOf="@+id/iv_product"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sản phẩm"
            />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tvProductCountVariant"
                android:textSize="@dimen/text_size_small"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3 "
                />
            <TextView
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Phiên bản | Tồn kho: "
                />
            <TextView
                android:id="@+id/tvProductCountOnHand"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>