<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:alpha="1.0"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="?attr/actionBarSize"
    xmlns:tools="http://schemas.android.com/tools">
    <ImageView
        android:visibility="gone"
        android:padding="12dp"
        android:src="@drawable/ic_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ivToolbarLeft"/>

    <TextView
        android:id="@+id/tvToolbarTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/san_pham_xml"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_normal"
        android:textStyle="bold" />
    <ImageView
        app:tint="@color/light_black"
        android:visibility="gone"
        android:layout_marginRight="@dimen/define_dimen_16"
        android:layout_toLeftOf="@id/ivToolbarSettingMenu"
        android:layout_marginEnd="@dimen/define_dimen_10"
        android:layout_centerInParent="true"
        android:src="@drawable/ic_edit"
        android:id="@+id/ivEditOrProductOrVariant"
        android:layout_width="24dp"
        android:layout_height="24dp"/>

    <ImageView
        android:layout_marginEnd="@dimen/define_dimen_12"
        android:visibility="gone"
        android:id="@+id/ivToolbarSettingMenu"
        app:tint="@color/light_black"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true"
        android:src="@drawable/ic_menu_vetical"
        android:layout_width="24dp"
        android:layout_height="24dp"
        />


</RelativeLayout>