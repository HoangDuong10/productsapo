                            android:layout_height="@dimen/define_dimen_18"
                            android:src="@drawable/ic_check"
                            />
                        <TextView
                            android:id="@+id/tv_sellable"
                            android:textColor="@color/black"
                            android:padding="@dimen/define_dimen_12"
                            android:textSize="@dimen/text_size_normal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/cho_phep_ban"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/card_view_variant_product"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/define_dimen_12"
                android:layout_marginRight="@dimen/define_dimen_12"
                app:cardCornerRadius="@dimen/define_dimen_10"
                app:cardElevation="@dimen/define_dimen_12">

                <RelativeLayout
                    android:id="@+id/layout_list_variant"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_variant_or_unit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/define_dimen_12"
                        android:text="@string/phien_ban_san_pham"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_normal" />

                    <ImageView
                        android:id="@+id/img_add_variant"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:padding="@dimen/define_dimen_12"
                        android:src="@drawable/ic_add_circle" />

                    <View
                        android:id="@+id/view"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_below="@+id/img_add_variant"
                        android:background="@color/black_overlay" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rcv_variant"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/view" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/card_view_status"
                app:cardCornerRadius="@dimen/define_dimen_6"
                android:layout_margin="@dimen/define_dimen_12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:gravity="center_vertical"
                    android:padding="@dimen/define_dimen_12"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/img_status"
                        android:layout_width="@dimen/define_dimen_12"
                        android:layout_height="@dimen/define_dimen_12"
                        android:src="@drawable/ic_dots" />
                    <TextView
                        android:id="@+id/tv_status"
                        android:layout_marginLeft="@dimen/define_dimen_6"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_normal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/dang_giao_dich"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <Button
                android:textColor="@color/orange"
                android:layout_marginBottom="@dimen/define_dimen_24"
                android:background="@drawable/bg_button_delete_product"
                android:paddingLeft="@dimen/define_dimen_24"
                android:paddingRight="@dimen/define_dimen_24"
                android:textAllCaps="false"
                android:textSize="@dimen/text_size_large"
                android:layout_marginTop="@dimen/define_dimen_24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/xoa_san_pham"
                android:layout_gravity="center"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>