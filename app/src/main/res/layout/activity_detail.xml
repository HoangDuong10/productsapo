                            android:textSize="@dimen/text_size_normal" />

                        <TextView
                            android:id="@+id/tvDetailOnHand"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:text="0"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size_normal" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/define_dimen_12"
                        android:layout_marginEnd="@dimen/define_dimen_20"
                        android:orientation="horizontal"
                        android:paddingBottom="@dimen/define_dimen_8">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/vi_tri_luu_kho"
                            android:textSize="@dimen/text_size_normal" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toLeftOf="@+id/tvDetailAvailable"
                            android:text="@string/co_the_ban"
                            android:textSize="@dimen/text_size_normal" />

                        <TextView
                            android:id="@+id/tvDetailAvailable"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:text="0"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size_normal" />
                    </RelativeLayout>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/crdDetailAddInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/define_dimen_12"
                app:cardCornerRadius="@dimen/define_dimen_16"
                app:cardElevation="@dimen/define_dimen_12">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/llDetailHeaderAddInfo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:id="@+id/rlDetailAddInfo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/define_dimen_12">

                            <TextView
                                android:id="@+id/tvDetailAddInfo"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/define_dimen_10"
                                android:text="@string/thong_tin_them"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_size_normal"
                                android:textStyle="bold" />

                            <ImageView
                                android:id="@+id/ivDetailDownOrUp"
                                android:layout_width="@dimen/define_dimen_24"
                                android:layout_height="@dimen/define_dimen_24"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:src="@drawable/ic_down"
                                app:tint="@color/light_black" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/tvDetailAddInfo"
                                android:layout_marginTop="@dimen/define_dimen_4"
