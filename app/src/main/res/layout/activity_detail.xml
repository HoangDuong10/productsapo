                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingLeft="@dimen/define_dimen_12">

                        <ImageView
                            android:id="@+id/ivDetailSellable"
                            android:layout_width="13dp"
                            android:layout_height="@dimen/define_dimen_18"
                            android:src="@drawable/ic_check_product" />

                        <TextView
                            android:id="@+id/tvDetailSellable"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/define_dimen_12"
                            android:text="@string/cho_phep_ban"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size_normal" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/crdDetailVariantProduct"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/define_dimen_12"
                android:layout_marginRight="@dimen/define_dimen_12"
                app:cardCornerRadius="@dimen/define_dimen_10"
                app:cardElevation="@dimen/define_dimen_12">

                <RelativeLayout
                    android:id="@+id/rlDetailListVariant"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tvDetailVariantOrUnit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/define_dimen_12"
                        android:text="@string/phien_ban_san_pham"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_normal" />

                    <ImageView
                        android:id="@+id/ivDetailAddVariant"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:padding="@dimen/define_dimen_12"
                        android:src="@drawable/ic_add_circle" />

                    <View
                        android:id="@+id/view"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_below="@+id/ivDetailAddVariant"
                        android:background="@color/black_overlay" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rclvDetailVariantOrUnit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/view" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/crdDetailStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/define_dimen_12"
                app:cardCornerRadius="@dimen/define_dimen_6">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="@dimen/define_dimen_12">

                    <ImageView
                        android:id="@+id/ivDetailStatus"
                        android:layout_width="@dimen/define_dimen_12"
                        android:layout_height="@dimen/define_dimen_12"
                        android:src="@drawable/ic_dots" />

                    <TextView
                        android:id="@+id/tvDetailStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/define_dimen_6"
                        android:text="@string/dang_giao_dich"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_normal" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/define_dimen_24"
                android:layout_marginBottom="@dimen/define_dimen_24"
                android:background="@drawable/shape_rec_white_bg_orange_stroke_corner_define_dimen_6"
                android:paddingLeft="@dimen/define_dimen_24"
                android:paddingRight="@dimen/define_dimen_24"
                android:text="@string/xoa_san_pham"
                android:textAllCaps="false"
                android:textColor="@color/orange"
                android:textSize="@dimen/text_size_large" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>