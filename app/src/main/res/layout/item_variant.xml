<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/define_dimen_18"
    android:id="@+id/layout_item">
    <RelativeLayout

        android:id="@+id/layout_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginTop="@dimen/define_dimen_5"
           android:paddingRight="@dimen/define_dimen_12"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/img_variant"
            android:layout_width="@dimen/define_dimen_56"
            android:layout_height="@dimen/define_dimen_56"
            android:src="@drawable/ic_img_empty"/>

        <TextView
            android:textStyle="bold"
            android:textColor="@color/blue"
            android:id="@+id/tv_total"
            android:visibility="gone"
            android:gravity="center"
            android:padding="@dimen/define_dimen_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/img_variant"
            android:layout_alignParentTop="true"
            android:background="@drawable/white_circle" />


    </RelativeLayout>

    <LinearLayout
        android:layout_centerVertical="true"
        android:id="@+id/linar_layout"
        android:orientation="vertical"
        android:layout_toRightOf="@+id/layout_image"
        android:layout_width="200dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_name_variant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/san_pham"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_normal"
            />
        <TextView
            android:id="@+id/tv_sku"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SHU: fvfrvr"
            android:textSize="@dimen/text_size_small"/>

    </LinearLayout>
    <LinearLayout
        android:layout_centerVertical="true"
       android:layout_alignParentEnd="true"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_gravity="right"
            android:id="@+id/tv_retail_price"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0vghgfghfgjf"/>
        <TextView
            android:layout_gravity="right"
            android:id="@+id/tv_count_inventories"
            android:textSize="@dimen/text_size_normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0hjgjgghjg"/>

    </LinearLayout>


</RelativeLayout>