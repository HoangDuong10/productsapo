<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/define_dimen_5"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rlVariantItem">
    <RelativeLayout
        android:id="@+id/rlVariant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:paddingLeft="@dimen/define_dimen_12"
            android:layout_marginTop="@dimen/define_dimen_5"
           android:paddingRight="@dimen/define_dimen_12"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/ivVariant"
            android:layout_width="@dimen/define_dimen_90"
            android:layout_height="@dimen/define_dimen_90"
            android:src="@drawable/ic_empty"/>

        <TextView
            android:padding="@dimen/define_dimen_4"
            android:textSize="@dimen/text_size_small"
            android:maxLines="1"
            android:textStyle="bold"
            android:textColor="@color/blue"
            android:id="@+id/tvVariantTotal"
            android:visibility="gone"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/ivVariant"
            android:layout_alignParentTop="true"
            android:background="@drawable/shape_cir_white_bg_blue_stroke_corner_define_dimen_2" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/rlVariant"
        android:layout_width="200dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tvVariantName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/san_pham"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_normal"
            />
        <TextView
            android:id="@+id/tvSKU"
            android:layout_below="@+id/tvVariantName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/SKU"
            android:textSize="@dimen/text_size_small"/>
        <TextView
            android:layout_toRightOf="@+id/tvSKU"
            android:layout_below="@+id/tvVariantName"
            android:id="@+id/tvVariantSKU"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" fvfrvr"
            android:textSize="@dimen/text_size_small"/>

    </RelativeLayout>
    <LinearLayout
        android:layout_marginTop="@dimen/define_dimen_12"
       android:layout_alignParentEnd="true"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_gravity="right"
            android:id="@+id/tvVariantRetailPrice"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0vghgfghfgjf"/>
        <TextView
            android:layout_gravity="right"
            android:id="@+id/tvVariantOnHand"
            android:textSize="@dimen/text_size_normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0hjgjgghjg"/>

    </LinearLayout>


</RelativeLayout>