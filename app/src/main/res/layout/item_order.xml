<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:layout_marginLeft="@dimen/define_dimen_12"
        android:id="@+id/tvOrderName"
        android:layout_marginTop="@dimen/define_dimen_20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/chon_nhieu"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_normal"/>
    <ImageView
        android:id="@+id/ivOrderCancel"
        android:layout_marginLeft="@dimen/define_dimen_12"
        android:layout_marginRight="@dimen/define_dimen_12"
        android:layout_marginTop="@dimen/define_dimen_12"
        app:tint="@color/black_overlay"
        android:layout_alignParentEnd="true"
        android:layout_width="@dimen/define_dimen_16"
        android:layout_height="@dimen/define_dimen_16"
        android:src="@drawable/ic_cancel"/>
    <LinearLayout
        android:id="@+id/llOrderSKU"
        android:layout_below="@id/tvOrderName"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginLeft="@dimen/define_dimen_12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sku"
            android:layout_marginTop="@dimen/define_dimen_8"
            android:textSize="@dimen/text_size_normal"/>
        <TextView
            android:layout_toLeftOf="@+id/tvOrderSKU"
            android:layout_marginLeft="@dimen/define_dimen_12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=":"
            android:layout_below="@id/tvOrderName"
            android:layout_marginTop="@dimen/define_dimen_8"
            android:textSize="@dimen/text_size_normal"/>
        <TextView
            android:id="@+id/tvOrderSKU"
            android:layout_marginLeft="@dimen/define_dimen_12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=":"
            android:layout_below="@id/tvOrderName"
            android:layout_marginTop="@dimen/define_dimen_8"
            android:textSize="@dimen/text_size_normal"/>
    </LinearLayout>

    <ImageView
        android:layout_marginRight="@dimen/define_dimen_12"
        android:id="@+id/ivOrderAdd"
        app:tint="@color/blue"
        android:layout_width="@dimen/define_dimen_24"
        android:layout_height="@dimen/define_dimen_24"
        android:src="@drawable/ic_add"
        android:layout_alignBottom="@+id/llOrderSKU"
        android:layout_alignParentRight="true"/>
    <TextView
        android:maxLines="1"
        android:id="@+id/tvOrderQuantity"
        android:layout_marginRight="@dimen/define_dimen_12"
        android:paddingLeft="@dimen/define_dimen_20"
        android:paddingRight="@dimen/define_dimen_20"
        android:background="@drawable/shape_rec_white_bg_black_overlay_stroke_define_dimen_2"
        android:textSize="@dimen/text_size_normal"
        android:textColor="@color/black"
        android:gravity="center"
        android:layout_width="@dimen/define_dimen_90"
        android:layout_height="wrap_content"
        android:text="1"
        android:ellipsize="end"
        android:layout_toLeftOf="@+id/ivOrderAdd"
        android:layout_alignBottom="@id/ivOrderAdd"/>
    <ImageView
        android:id="@+id/ivOrderLess"
        app:tint="@color/blue"
        android:layout_marginRight="@dimen/define_dimen_12"
        android:src="@drawable/ic_less"
        android:layout_toLeftOf="@+id/tvOrderQuantity"
        android:layout_alignBottom="@+id/tvOrderQuantity"
        android:layout_width="@dimen/define_dimen_24"
        android:layout_height="@dimen/define_dimen_24"/>

    <TextView
        android:layout_marginBottom="@dimen/define_dimen_12"
        android:id="@+id/tvOrderRetailPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/llOrderSKU"
        android:layout_marginLeft="@dimen/define_dimen_12"
        android:layout_marginTop="@dimen/define_dimen_8"
        android:text="0"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_normal" />
    <TextView
        android:visibility="gone"
        android:id="@+id/tvOrderLackOfGoods"
        android:layout_marginLeft="@dimen/define_dimen_12"
        android:layout_alignLeft="@+id/tvOrderQuantity"
        android:textSize="@dimen/text_size_small"
        android:layout_alignBottom="@id/tvOrderRetailPrice"
        android:layout_alignParentRight="true"
        android:textColor="@color/red"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/thieu_hang"/>
    <ImageView
        android:id="@+id/ivOrderWarning"
        android:visibility="gone"
        app:tint="@color/red"
        android:layout_alignBottom="@+id/tvOrderLackOfGoods"
        android:layout_toLeftOf="@+id/tvOrderLackOfGoods"
        android:layout_width="@dimen/define_dimen_18"
        android:layout_height="@dimen/define_dimen_18"
        android:src="@drawable/ic_warning"/>
</RelativeLayout>