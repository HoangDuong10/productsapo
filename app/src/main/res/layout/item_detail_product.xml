<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/define_dimen_18">
    <ImageView
        android:visibility="gone"
        android:id="@+id/img_subdirectory"
        android:layout_centerVertical="true"
        android:layout_width="@dimen/define_dimen_48"
        android:layout_height="@dimen/define_dimen_48"
        android:src="@drawable/ic_subdirectory"/>
    <ImageView
        android:scaleType="centerCrop"
        android:layout_toRightOf="@+id/img_subdirectory"
        android:layout_centerVertical="true"
        android:id="@+id/img_variant"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_img_empty"/>
    <LinearLayout
        android:layout_centerVertical="true"
        android:id="@+id/linar_layout"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/define_dimen_10"

        android:layout_toRightOf="@+id/img_variant"
        android:layout_width="200dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_name_variant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/san_pham"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_normal"
            />
        <TextView
            android:id="@+id/tv_sku"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SHU: fvfrvr"
            android:textSize="@dimen/text_size_small"/>

    </LinearLayout>
    <LinearLayout
        android:layout_alignParentEnd="true"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_retail_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="0vghgfghfgjf"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_normal" />
        <TextView
            android:layout_gravity="right"
            android:id="@+id/tv_count_inventories"
            android:textSize="@dimen/text_size_normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0hjgjgghjg"/>
        <TextView
            android:layout_gravity="right"
            android:id="@+id/tv_can_sell"
            android:textSize="@dimen/text_size_normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0hjgjgghjg"/>

    </LinearLayout>

</RelativeLayout>